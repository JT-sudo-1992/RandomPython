# This is a magic 8 ball
# Tell the magic 8 ball your question
import random
responses = [
    "it is certain",
    "without a doubt",
    "sometimes",
    "another time",
    "please ask magic 8 ball later",
    "error 404 - please try again",
]
input("Tell the magic 8 ball your question: ")
answer = random.choice(responses)
print(f"the magic 8 ball says: {answer}")

Yes = input("are you happy with your answer(yes/no): ")
if Yes == 'yes':
    print ("Good enjoy your day")
if Yes == 'no':
    answer = random.choice(responses)
    print(f"your new answer is: {answer}")
